# Server Configuration
PORT=5000
NODE_ENV=development

# Private Key (REQUIRED for trading)
# Your wallet private key for signing transactions
# ⚠️ NEVER commit this to version control
PRIVATE_KEY=your_private_key_here

# CLOB API Configuration
CLOB_API_URL=https://clob.polymarket.com

# Polygon RPC Configuration
# Primary RPC endpoint
POLYGON_RPC_URL=https://polygon-rpc.com
# Alternative RPC endpoints (comma-separated, used as fallbacks)
POLYGON_RPC_FALLBACKS=https://rpc.ankr.com/polygon,https://polygon.llamarpc.com

# Blockchain Configuration
CHAIN_ID=137
CTF_EXCHANGE_ADDRESS=0x4bFb41d5B3570DeFd03C39a9A4D8dE6Bd8B8982E
USDC_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# Builder Credentials (REQUIRED for trading)
# Get these from your Polymarket Builder Profile: https://polymarket.com/builder
BUILDER_API_KEY=your_builder_api_key_here
BUILDER_API_SECRET=your_builder_api_secret_here
BUILDER_PASSPHRASE=your_builder_passphrase_here
BUILDER_ADDRESS=0x29be1a571dc1e18a946bce8c5c629faacbd436ad

# Signature Configuration
SIGNATURE_TYPE=2
# Signature types:
# 1 = EOA (wallet is both signer and maker)
# 2 = Builder (wallet signs, builder is maker) - Recommended

# Optional ClobClient Settings
GEO_BLOCK_TOKEN=
USE_SERVER_TIME=false

# WebSocket Configuration (optional)
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000
# Or for production:
# FRONTEND_URL=https://yourdomain.com

# Proxy Factory Addresses (optional, defaults provided)
GNOSIS_SAFE_FACTORY=0xaacfeea03eb1561c4e67d661e40682bd20e3541b
POLYMARKET_PROXY_FACTORY=0xaB45c54AB0c941a2F231C04C3f49182e1A254052
